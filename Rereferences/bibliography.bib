@article{Niederle2011,
  title={Gender and Competition},
  author={Muriel Niederle and Lise Vesterlund},
  journal={Annual Review of Economics},
  year={2011},
  abstract={Laboratory studies have shown that women often respond less favorably to competition than men. Men are more eager to compete and their performance improves more with competition. This leads to fewer women entering and winning competitions. This review examines the robustness of these differences and the factors that contribute to them. Both laboratory and field studies confirm these findings, suggesting that gender differences in competitiveness stem from differences in overconfidence and attitudes toward competition. Risk aversion plays a smaller and less robust role. The article concludes by exploring ways to encourage both men and women to compete.},
}

@article{Boeheim2017,
  title={Gender Differences in Competitiveness},
  author={René Böheim and Dominik Grübl and Mario Lackner},
  journal={ifo DICE Report},
  year={2017},
  abstract={This paper examines the evidence for a gender gap in competitiveness, exploring its implications for labor market outcomes, education policies, and firm performance. The authors review a range of studies, including laboratory experiments, field data, and sports data, to assess the existence and potential causes of this gap. They find that women tend to shy away from competition, particularly in situations where they perceive a high risk of failure or where they lack confidence in their abilities. This difference in competitiveness can lead to disparities in educational choices, wage negotiations, and career paths. The authors also discuss the role of culture, socialization, and biological factors in shaping gender differences in competitiveness. They conclude that while the evidence for a gender gap in competitiveness is strong, it is not clear whether it is desirable to close this gap by making women more competitive. They argue that promoting a more balanced and inclusive approach to competition, where both men and women are encouraged to participate and succeed, may be more beneficial for society as a whole.},
}
@article{Gneezy2003,
  title={Performance in Competitive Environments: Gender Differences},
  author={Uri Gneezy and Muriel Niederle and Aldo Rustichini},
  journal={The Quarterly Journal of Economics},
  year={2003},
  abstract={This paper presents experimental evidence suggesting that women may be less effective than men in competitive environments, even if they perform similarly in noncompetitive settings. The study uses a laboratory experiment with computerized mazes, finding that men's performance significantly increases in competitive environments (tournaments), while women's performance remains unchanged. This leads to a significant gender gap in tournament performance, absent in piece-rate conditions. The effect is stronger when women compete against men, suggesting that women may be capable of performing in competitive environments but are affected by the presence of men. The study explores potential explanations for this difference, including risk aversion, stereotype threat, and differences in effort costs and preferences.},
}
 
 
