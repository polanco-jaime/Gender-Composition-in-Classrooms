@article{Pregaldini2020,
  title={Girls’ preferences for STEM and the effects of classroom gender composition: New evidence from a natural experiment},
  author={Damiano Pregaldini and Uschi Backes-Gellner and Gerald Eisenkopf},
  journal={Journal of Economic Behavior and Organization},
  year={2020},
  abstract={This study investigates the impact of classroom gender composition on math grades of high school girls in Switzerland, considering their preferences for STEM fields. Using data from a school that randomly assigns students to classrooms after they choose their specialization (STEM, modern languages, or ancient languages), the study finds that a higher proportion of female peers has a positive effect on math grades for girls in language specializations but a negative effect for girls in the STEM specialization. This suggests that the average positive effect of female peers on math grades found in previous studies might mask heterogeneity across students with different preferences for STEM. The study also explores possible explanations for this heterogeneity, suggesting that differences in willingness to compete might play a role.},
  participants={2,279},
  population={High school students in Switzerland, specifically those attending a gymnasium (academic high school) in the canton of Zurich, who self-selected into one of three specializations: STEM, modern languages, or ancient languages.},
  intervention={The study exploits the school's policy of randomly assigning students to classrooms within their chosen specialization after they have made their specialization choice. This policy creates exogenous variation in classroom gender composition.},
  findings={The study finds that a higher proportion of female peers in the classroom has a positive effect on math grades for girls in language specializations but a negative effect for girls in the STEM specialization. This suggests that the average positive effect of female peers on math grades found in previous studies might mask heterogeneity across students with different preferences for STEM.},
  outcomes={Math grades of students in different specializations (STEM, modern languages, and ancient languages).},
  design={The study uses a natural experiment design, exploiting the random assignment of students to classrooms within their chosen specialization after they have made their specialization choice. This allows the researchers to identify the causal effect of classroom gender composition on math grades.},
  problem={How does classroom gender composition affect the grades of girls (and boys) with different preferences for STEM fields?}
}

@article{Grosse2010,
