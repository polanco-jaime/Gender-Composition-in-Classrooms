@article{TylerWood2018,
  title={Factors Influencing Student STEM Career Choices: Gender Differences},
  author={Tandra Tyler-Wood and Karen Johnson and Deborah Cockerham},
  journal={Journal of Research in STEM Education},
  year={2018},
  abstract={This study investigated factors influencing middle school students' STEM career choices, comparing interest and ability in STEM subjects by gender. While significant gender differences were found in mathematics interest, no differences were found in science, technology, engineering, or STEM career interest. Regression analysis showed STEM variables explained more variance in boys' STEM career pursuit than girls'. The study highlights the persistent gender gap in STEM and suggests a constructivist learning approach may help girls develop a more positive attitude towards science, increase STEM awareness and interest, and improve STEM success.},
